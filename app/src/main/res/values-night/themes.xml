<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.EgyTick" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryContainer">@color/orange</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange</item>
        <item name="colorSecondaryContainer">@color/orange</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Background color. -->
        <item name="android:colorBackground">#201F1F</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>

        <!-- Error colors. -->
        <item name="colorError">@color/colorSnackBarError</item>
        <item name="colorOnError">@color/white</item>
    </style>

    <style name="Theme.EgyTick" parent="Base.Theme.EgyTick" />
</resources>
