<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <com.example.egytick.utils.TextViewBold
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reviews"
        android:textSize="24sp"
        android:layout_marginBottom="16dp" />

    <com.example.egytick.utils.TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cleanliness: "
        android:textSize="18sp"
        android:layout_marginBottom="8dp" />

    <RatingBar
        android:id="@+id/cleanlinessRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize="0.5"
        android:layout_marginBottom="16dp" />

    <com.example.egytick.utils.TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Facilities: "
        android:textSize="18sp"
        android:layout_marginBottom="8dp" />

    <RatingBar
        android:id="@+id/facilitiesRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize="0.5"
        android:layout_marginBottom="16dp" />

    <com.example.egytick.utils.TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Staff: "
        android:textSize="18sp"
        android:layout_marginBottom="8dp" />

    <RatingBar
        android:id="@+id/staffRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize="0.5"
        android:layout_marginBottom="16dp" />

    <com.example.egytick.utils.TextViewBold
        android:id="@+id/averageUserRatingText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your average rating: 0.0"
        android:textSize="18sp"
        android:layout_marginBottom="16dp" />

    <com.example.egytick.utils.TextViewBold
        android:id="@+id/overallAverageRatingText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Overall average rating: 0.0"
        android:textSize="18sp"
        android:layout_marginBottom="16dp" />

    <com.example.egytick.utils.Button
        android:id="@+id/submitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit" />
</LinearLayout>
